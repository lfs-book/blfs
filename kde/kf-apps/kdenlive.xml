      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Kdenlive Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="kf6-frameworks"/>,
      <xref linkend="mlt"/>, and
