    <bridgehead renderas="sect3">Vulkan-loader Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="cmake"/>,
      <xref linkend="vulkan-headers"/>, and
      <xref linkend="xorg7-lib"/>
    </para>

